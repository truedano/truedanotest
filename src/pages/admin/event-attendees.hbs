<h1>Attendees for: {{event.title}}</h1>
<p><strong>Date:</strong> {{event.date}}</p>

{{#if error}}
  <p style="color: red;">{{error}}</p>
{{/if}}

{{#if attendeesWithUsernames.length}}
  <h3>Registered Users ({{attendeesWithUsernames.length}}):</h3>
  <ul>
    {{#each attendeesWithUsernames}}
      <li>
        <strong>{{this.username}}</strong>
        {{#if this.responses.length}}
          <ul>
            {{#each this.responses}}
              <li><em>{{this.label}}:</em> {{this.value}}</li>
            {{/each}}
          </ul>
        {{else}}
          <p><em>No specific responses submitted by this user.</em></p>
        {{/if}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No users have registered for this event yet.</p>
{{/if}}

<p><a href="/admin/events">Back to Manage Events List</a></p>
